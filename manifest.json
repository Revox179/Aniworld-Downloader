{
    "manifest_version": 3,
    "name": "AniWorld-Downloader",
    "version": "1.0.1",
    "description": "Download anime from AniWorld",
    "icons": {
        "64": "logo-64.png"
    },
    "background": {
        "scripts": [
            "background-script.js"
        ]
    },
    "permissions": [
        "downloads",
        "webRequest"
    ],
    "host_permissions": [
        "*://aniworld.to/*",
        "*://vidoza.net/*",
        "*://videzz.net/*"
    ],
    "action": {
        "default_icon": "logo-64.png",
        "default_title": "AniWorld Downloader",
        "default_popup": "popup/popup.html",
        "default_area": "navbar"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{d46e9d00-224d-4911-9565-86c1985a5f5f}"
        }
    }
}